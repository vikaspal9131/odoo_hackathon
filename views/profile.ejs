<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Profile | Skill Swap</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-white text-black min-h-screen flex flex-col">

  <!-- Navbar -->
  <header class="flex items-center justify-between px-6 py-4 border-b shadow-sm">
    <h1 class="text-xl font-semibold">Skill Swap Platform</h1>
    <div class="flex items-center space-x-4">
      <a href="/swap-requests" class="hover:underline">Swap Request</a>
      <a href="/" class="hover:underline">Home</a>
      <img src="<%= user?.profilePhoto || 'https://i.pravatar.cc/40' %>" alt="Profile" class="w-10 h-10 rounded-full">
    </div>
  </header>

  <!-- Profile Section -->
  <main class="flex flex-col md:flex-row p-6 gap-6 max-w-5xl mx-auto mt-10">

    <!-- Left Side -->
    <div class="flex-1">
      <form action="/send-request/<%= user._id %>" method="POST">
        <button type="submit"
          class="bg-teal-600 text-white px-4 py-2 rounded-full mb-4 hover:bg-teal-700">
          Request
        </button>
      </form>

      <h2 class="text-2xl font-bold mb-4"><%= user?.name || "User Name" %></h2>

      <div class="mb-4">
        <p class="font-semibold">Skills Offered:</p>
        <ul class="list-disc list-inside text-gray-700">
          <% if (user?.skillsOffered && user.skillsOffered.length > 0) { %>
            <% user.skillsOffered.forEach(skill => { %>
              <li><%= skill %></li>
            <% }) %>
          <% } else { %>
            <li>No skills listed.</li>
          <% } %>
        </ul>
      </div>

      <div class="mb-4">
        <p class="font-semibold">Skills Wanted:</p>
        <ul class="list-disc list-inside text-gray-700">
          <% if (user?.skillsWanted && user.skillsWanted.length > 0) { %>
            <% user.skillsWanted.forEach(skill => { %>
              <li><%= skill %></li>
            <% }) %>
          <% } else { %>
            <li>No skills wanted.</li>
          <% } %>
        </ul>
      </div>

      <div>
        <p class="font-semibold">Rating and Feedback:</p>
        <p class="text-gray-600 italic">Coming soon...</p>
      </div>
    </div>

    <!-- Right Side -->
    <div class="flex-shrink-0 self-center">
      <div class="w-40 h-40 rounded-full border-4 border-gray-300 overflow-hidden">
        <img src="<%= user?.profilePhoto || 'https://i.pravatar.cc/200' %>" alt="Profile Photo" class="w-full h-full object-cover">
      </div>
    </div>
  </main>

</body>
</html>
